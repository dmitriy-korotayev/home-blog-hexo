section#about.ftco-about.img.ftco-section.ftco-no-pb
  .container
    .row.d-flex
      .col-md-6.col-lg-5.d-flex
        .img-about.img.d-flex.align-items-stretch
          .overlay
          .img.d-flex.align-self-stretch.align-items-center(style='background-image:url(img/about-weighing-priorities.jpg);')
      .col-md-6.col-lg-7.pl-lg-5.pb-5
        .row.justify-content-start.pb-3
          .col-md-12.heading-section.ftco-animate
            h1.big= __('about.title_big')
            h2.mb-4= __('about.title')
            p= __('about.text')
            ul.about-info.mt-4.px-md-0.px-2
              li.d-flex
                span= config.author
                span= __('about.name_value')
              li.d-flex
                span= __('about.birth_date')
                span= __('about.birth_date_value')
              li.d-flex
                span= __('about.location')
                span= __('about.location_value')
              li.d-flex
                span= __('about.email')
                span= config.email
              li.d-flex
                span= __('about.phone')
                span= config.phone
        .counter-wrap.ftco-animate.d-flex.mt-md-3
          .text
            p.mb-4
              - const projectsCount = __('about.projects_count')
              span.number(data-number=projectsCount) 0
              = ' '
              span= __('about.projects_complete')
            p
              a.btn.btn-primary.py-3.px-3(
                href=url_for(config.cv_file_path)
                )
                = __('about.download_cv')
