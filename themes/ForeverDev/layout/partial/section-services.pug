section#services.ftco-section
  .container
    .row.justify-content-center.py-5.mt-5
      .col-md-12.heading-section.text-center.ftco-animate
        h1.big.big-2= __('services.title_big')
        h2.mb-4= __('services.title')
        p= __('services.text')
    .row
      each service in config.services
        .col-md-4.text-center.d-flex.ftco-animate
          - className = 'services.' + service
          a.service(href='#todo')
            span.icon
              - iconClass = 'icon-' + service
              i(class=iconClass)
            .desc
              h3.mb-5= __('services.' + service + '_title')
